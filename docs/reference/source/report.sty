\renewcommand{\maketitle}{

    \clearpage\thispagestyle{empty}     % Remove page numbering

    \newgeometry{left=0mm,bottom=4cm, top=-4.2mm, right=0mm}
    \begin{titlepage}

    \makeatletter                       % Retrieve title & other macros

    \centering

    \vspace*{8cm}
    {\styleTitle\@title\par}

    \vspace{2cm}
    {\styleAuthor\@author}

    \vspace*{0.5cm}
    {\styleDate\@date}

    \begin{figure}[!b]
        \centering
        \includegraphics[height=\logoHeight]{\logo}
    \end{figure}

    \makeatother

    \end{titlepage} % ---------------------------------- Title Page End
    \restoregeometry

    \clearpage
    \pagenumbering{roman}

    \tableofcontents            % TOC
    % \listoffigures              % LOF
    % \listoftables               % LOT

    \clearpage
    \pagenumbering{arabic}
}

